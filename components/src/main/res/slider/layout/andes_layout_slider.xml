<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.mercadolibre.android.andesui.textview.AndesTextView
        android:id="@+id/andes_slider_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:andesTextViewStyle="bodyM"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toTopOf="@+id/andes_slider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/andes_slider_left_component"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="noHideDescendants"
        app:layout_constraintTop_toTopOf="@id/andes_slider"
        app:layout_constraintBottom_toBottomOf="@+id/andes_slider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/andes_slider"
        />

    <com.google.android.material.slider.Slider
        android:id="@+id/andes_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/Andes.Slider"
        android:stepSize="1"
        android:importantForAccessibility="yes"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintEnd_toStartOf="@+id/andes_slider_right_component"
        app:layout_constraintStart_toEndOf="@+id/andes_slider_left_component"
        app:layout_constraintTop_toBottomOf="@id/andes_slider_title"
        app:thumbRadius="@dimen/andes_slider_thumb_radius"
        app:thumbStrokeWidth="@dimen/andes_slider_thumb_stroke_width"
        app:trackHeight="@dimen/andes_slider_track_height"
        app:haloRadius="@dimen/andes_slider_halo_radius"/>

    <FrameLayout
        android:id="@+id/andes_slider_right_component"
        android:layout_width="wrap_content"
        android:importantForAccessibility="no"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/andes_slider"
        app:layout_constraintBottom_toBottomOf="@+id/andes_slider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/andes_slider">
    </FrameLayout>

    <com.mercadolibre.android.andesui.textview.AndesTextView
        android:id="@+id/andes_slider_label_value"
        android:layout_width="0dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        android:layout_marginBottom="@dimen/andes_slider_label_value_margin_top"
        app:andesTextViewStyle="bodyXs"
        android:importantForAccessibility="noHideDescendants"
        app:layout_constraintEnd_toEndOf="@id/andes_slider"
        app:layout_constraintStart_toStartOf="@id/andes_slider"
        app:layout_constraintTop_toBottomOf="@+id/andes_slider" />

</merge>
