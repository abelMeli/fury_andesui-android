<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/andes_switch_layout_height">

    <com.mercadolibre.android.andesui.textview.AndesTextView
        android:id="@+id/switch_text_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/andes_switch_left_text_margin_end"
        android:ellipsize="end"
        android:textColor="@color/andes_text_color_primary"
        app:andesTextViewStyle="bodyM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/switch_component"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap" />

    <com.mercadolibre.android.andesui.switchandes.AndesSwitchComponent
        android:id="@+id/switch_component"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/switch_text_right"
        app:layout_constraintStart_toEndOf="@id/switch_text_left"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mercadolibre.android.andesui.textview.AndesTextView
        android:id="@+id/switch_text_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/andes_switch_right_text_margin_start"
        android:ellipsize="end"
        android:textColor="@color/andes_text_color_primary"
        app:andesTextViewStyle="bodyM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/switch_component"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap" />

</androidx.constraintlayout.widget.ConstraintLayout>