<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.ScrollView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/andes_feedback_content_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:paddingBottom="@dimen/andes_feedbackscreen_content_bottom_margin">

        <View
            android:id="@+id/andes_feedback_congrats_solid_gradient"
            android:layout_width="match_parent"
            android:layout_height="@dimen/andes_feedbackscreen_congrats_gradient_solid_size"
            android:background="@color/andes_green_500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/andes_feedback_congrats_gradient"
            android:layout_width="match_parent"
            android:layout_height="@dimen/andes_feedbackscreen_congrats_gradient_size"
            android:background="@drawable/andes_feedback_congrats_header_gradient"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/andes_feedback_congrats_solid_gradient" />

        <ImageView
            android:id="@+id/andes_feedbackscreen_close"
            android:layout_width="@dimen/andes_feedbackscreen_close_button_size"
            android:layout_height="@dimen/andes_feedbackscreen_close_button_size"
            android:layout_marginTop="@dimen/andes_feedbackscreen_close_icon_margin"
            android:layout_marginEnd="@dimen/andes_feedbackscreen_close_icon_margin"
            android:contentDescription="@string/andes_feedbackscreen_close_button"
            android:scaleType="centerInside"
            android:src="@drawable/andes_ui_close_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/andes_feedbackscreen_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/andes_feedbackscreen_content_horizontal_margin"
            android:layout_marginEnd="@dimen/andes_feedbackscreen_content_horizontal_margin"
            android:visibility="gone"
            app:andesButtonHierarchy="loud"
            app:andesButtonSize="large"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/andes_feedbackscreen_gradient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="andes_feedback_congrats_solid_gradient,andes_feedback_congrats_gradient" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>