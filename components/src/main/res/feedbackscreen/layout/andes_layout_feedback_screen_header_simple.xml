<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/andes_feedbackscreen_header_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusableInTouchMode="false"
        android:importantForAccessibility="no"
        android:visibility="gone"
        app:cardBackgroundColor="@color/andes_white"
        app:cardCornerRadius="@dimen/andes_card_corner_radius"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <FrameLayout
        android:id="@+id/andes_feedbackscreen_header_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/andes_feedbackscreen_thumbnail_margin_bottom"
        app:layout_constraintBottom_toTopOf="@+id/andes_feedbackscreen_header_overline"
        app:layout_constraintEnd_toEndOf="@+id/andes_feedbackscreen_header_card"
        app:layout_constraintStart_toStartOf="@+id/andes_feedbackscreen_header_card"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/andes_feedbackscreen_header_overline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:importantForAccessibility="yes"
        android:focusableInTouchMode="true"
        android:textColor="@color/andes_text_color_primary"
        android:textSize="@dimen/andes_feedbackscreen_header_overline_size"
        app:layout_constraintBottom_toTopOf="@+id/andes_feedbackscreen_header_title"
        app:layout_constraintEnd_toEndOf="@+id/andes_feedbackscreen_header_card"
        app:layout_constraintStart_toStartOf="@+id/andes_feedbackscreen_header_card"
        app:layout_constraintTop_toBottomOf="@+id/andes_feedbackscreen_header_image" />

    <TextView
        android:id="@+id/andes_feedbackscreen_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/andes_text_color_primary"
        android:textSize="@dimen/andes_feedbackscreen_header_title_size"
        android:importantForAccessibility="yes"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toTopOf="@+id/andes_feedbackscreen_header_highlight"
        app:layout_constraintEnd_toEndOf="@+id/andes_feedbackscreen_header_card"
        app:layout_constraintStart_toStartOf="@+id/andes_feedbackscreen_header_card"
        app:layout_constraintTop_toBottomOf="@+id/andes_feedbackscreen_header_overline"/>

    <TextView
        android:id="@+id/andes_feedbackscreen_header_highlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:importantForAccessibility="yes"
        android:focusableInTouchMode="true"
        android:textColor="@color/andes_text_color_primary"
        android:textSize="@dimen/andes_feedbackscreen_header_highlight_size"
        app:layout_constraintBottom_toTopOf="@+id/andes_feedbackscreen_header_description"
        app:layout_constraintEnd_toEndOf="@+id/andes_feedbackscreen_header_card"
        app:layout_constraintStart_toStartOf="@+id/andes_feedbackscreen_header_card"
        app:layout_constraintTop_toBottomOf="@+id/andes_feedbackscreen_header_title" />

    <TextView
        android:id="@+id/andes_feedbackscreen_header_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:importantForAccessibility="yes"
        android:focusableInTouchMode="true"
        android:textColor="@color/andes_text_color_primary"
        android:textSize="@dimen/andes_feedbackscreen_header_description_size"
        app:layout_constraintEnd_toEndOf="@+id/andes_feedbackscreen_header_card"
        app:layout_constraintStart_toStartOf="@+id/andes_feedbackscreen_header_card"
        app:layout_constraintTop_toBottomOf="@+id/andes_feedbackscreen_header_highlight" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/andes_feedbackscreen_container_error_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/andes_feedbackscreen_error_container_margin"
        android:background="@drawable/andes_screen_error_code_background"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintEnd_toEndOf="@+id/andes_feedbackscreen_header_card"
        app:layout_constraintStart_toStartOf="@+id/andes_feedbackscreen_header_card"
        app:layout_constraintTop_toBottomOf="@+id/andes_feedbackscreen_header_description">

        <com.mercadolibre.android.andesui.textview.AndesTextView
            android:id="@+id/andes_feedbackscreen_header_error_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:paddingLeft="@dimen/andes_feedbackscreen_error_padding"
            android:paddingBottom="@dimen/andes_feedbackscreen_error_top_bottom_padding"
            android:paddingTop="@dimen/andes_feedbackscreen_error_top_bottom_padding"
            android:importantForAccessibility="yes"
            android:textColor="@color/andes_accent_color_500"
            android:visibility="gone"
            app:andesTextViewStyle="bodyXs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/andes_error_code_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/andes_copy_error_16"
            android:layout_marginRight="@dimen/andes_feedbackscreen_error_image_margin_right"
            android:visibility="gone"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/andes_feedbackscreen_header_error_code"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>