<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/andes_feedbackscreen_congrats_header_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/andes_white"
        app:cardCornerRadius="@dimen/andes_card_corner_radius"
        app:cardElevation="@dimen/andes_card_elevated_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/andes_feedbackscreen_congrats_header_body_card_padding"
            android:layout_marginVertical="@dimen/andes_feedbackscreen_congrats_header_body_card_padding">

            <FrameLayout
                android:id="@+id/andes_feedbackscreen_congrats_header_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/andes_feedbackscreen_thumbnail_margin_start"
                android:layout_marginBottom="@dimen/andes_feedbackscreen_thumbnail_margin_bottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/andes_feedbackscreen_congrats_header_title"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/andes_feedbackscreen_congrats_header_overline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/andes_feedbackscreen_congrats_header_body_padding_vertical"
                android:textColor="@color/andes_text_color_primary"
                android:importantForAccessibility="yes"
                android:focusableInTouchMode="true"
                android:textSize="@dimen/andes_feedbackscreen_header_overline_size"
                app:layout_constraintBottom_toTopOf="@id/andes_feedbackscreen_congrats_header_title"
                app:layout_constraintEnd_toEndOf="@id/andes_feedbackscreen_congrats_header_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/andes_feedbackscreen_congrats_header_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/andes_text_color_primary"
                android:importantForAccessibility="yes"
                android:focusableInTouchMode="true"
                android:textSize="@dimen/andes_feedbackscreen_congrats_header_title_size"
                app:layout_constraintBottom_toTopOf="@id/andes_feedbackscreen_congrats_header_highlight"
                app:layout_constraintEnd_toStartOf="@id/andes_feedbackscreen_congrats_header_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/andes_feedbackscreen_congrats_header_overline"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/andes_feedbackscreen_congrats_header_highlight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/andes_feedbackscreen_congrats_header_body_padding_vertical"
                android:textColor="@color/andes_text_color_primary"
                android:textSize="@dimen/andes_feedbackscreen_header_highlight_size"
                android:importantForAccessibility="yes"
                android:focusableInTouchMode="true"
                app:layout_constraintBottom_toTopOf="@id/andes_feedbackscreen_congrats_header_description"
                app:layout_constraintEnd_toEndOf="@id/andes_feedbackscreen_congrats_header_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/andes_feedbackscreen_congrats_header_title"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/andes_feedbackscreen_congrats_header_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/andes_feedbackscreen_congrats_header_body_padding_vertical"
                android:textColor="@color/andes_text_color_primary"
                android:textSize="@dimen/andes_feedbackscreen_header_description_size"
                android:importantForAccessibility="yes"
                android:focusableInTouchMode="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/andes_feedbackscreen_congrats_header_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/andes_feedbackscreen_congrats_header_highlight"
                app:layout_constraintVertical_chainStyle="packed" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</merge>