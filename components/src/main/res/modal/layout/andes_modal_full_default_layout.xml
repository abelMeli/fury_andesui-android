<?xml version="1.0" encoding="utf-8"?>
<com.mercadolibre.android.andesui.stickyscrollview.AndesStickyScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/andes_white"
    android:paddingBottom="@dimen/andes_modal_margin_16"
    android:fillViewport="true"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mercadolibre.android.andesui.modal.views.AndesModalHeaderTypeComponent
            android:id="@+id/header_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/andes_bg_color_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/header_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/content_button_group">

            <com.mercadolibre.android.andesui.modal.views.AndesModalImageComponent
                android:id="@+id/image_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.mercadolibre.android.andesui.textview.AndesTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/andes_bg_color_white"
                android:paddingTop="@dimen/andes_modal_margin_22"
                android:paddingBottom="@dimen/andes_modal_margin_12"
                android:paddingHorizontal="@dimen/andes_modal_margin_24"
                app:andesTextViewTextColor="primary"
                app:andesTextViewStyle="titleS"
                app:layout_constraintTop_toBottomOf="@+id/image_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Title" />

            <com.mercadolibre.android.andesui.textview.AndesTextView
                android:id="@+id/sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/andes_modal_margin_24"
                android:gravity="center"
                android:justificationMode="inter_word"
                app:andesTextViewStyle="bodyM"
                app:andesTextViewTextColor="primary"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Sub Title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/content_button_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/andes_modal_margin_32"
            android:layout_marginHorizontal="@dimen/andes_modal_margin_24"
            android:visibility="gone"
            android:paddingTop="@dimen/andes_modal_margin_16"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.mercadolibre.android.andesui.stickyscrollview.AndesStickyScrollView>