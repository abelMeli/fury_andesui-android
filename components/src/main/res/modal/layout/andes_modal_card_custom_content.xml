<?xml version="1.0" encoding="utf-8"?>
<com.mercadolibre.android.andesui.stickyscrollview.AndesStickyScrollView android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/andes_bg_color_white"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mercadolibre.android.andesui.textview.AndesTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/andes_bg_color_white"
            android:gravity="center"
            android:paddingHorizontal="@dimen/andes_modal_margin_24"
            android:paddingTop="@dimen/andes_modal_margin_22"
            android:paddingBottom="@dimen/andes_modal_margin_12"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:andesTextViewStyle="titleS"
            app:andesTextViewTextColor="primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <com.mercadolibre.android.andesui.modal.views.AndesModalHeaderTypeComponent
            android:id="@+id/header_component"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/andes_bg_color_white"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <LinearLayout
            android:id="@+id/custom_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/andes_modal_margin_16"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.mercadolibre.android.andesui.stickyscrollview.AndesStickyScrollView>