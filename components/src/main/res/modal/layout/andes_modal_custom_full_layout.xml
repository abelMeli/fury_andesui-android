<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mercadolibre.android.andesui.stickyscrollview.AndesStickyScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/andes_white"
        android:paddingBottom="@dimen/andes_modal_margin_16"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_group_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.mercadolibre.android.andesui.modal.views.AndesModalHeaderTypeComponent
                android:id="@+id/header_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/andes_bg_color_white" />

            <LinearLayout
                android:id="@+id/custom_view_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/andes_white"
                android:orientation="vertical" />

        </LinearLayout>

    </com.mercadolibre.android.andesui.stickyscrollview.AndesStickyScrollView>

    <LinearLayout
        android:id="@+id/button_group_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/andes_modal_content_button_background"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>