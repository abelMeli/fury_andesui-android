<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Andes" />

    <style name="Andes.Title" />

    <style name="Andes.Body" />

    <style name="Andes.Title.XL">
        <item name="android:textSize">@dimen/andes_title_font_size_xl</item>
    </style>

    <style name="Andes.Title.L">
        <item name="android:textSize">@dimen/andes_title_font_size_l</item>
    </style>

    <style name="Andes.Title.M">
        <item name="android:textSize">@dimen/andes_title_font_size_m</item>
    </style>

    <style name="Andes.Title.S">
        <item name="android:textSize">@dimen/andes_title_font_size_s</item>
    </style>

    <style name="Andes.Title.XS">
        <item name="android:textSize">@dimen/andes_title_font_size_xs</item>
    </style>

    <style name="Andes.Body.L">
        <item name="android:textSize">@dimen/andes_body_font_size_l</item>
    </style>

    <style name="Andes.Body.M">
        <item name="android:textSize">@dimen/andes_body_font_size_m</item>
    </style>

    <style name="Andes.Body.S">
        <item name="android:textSize">@dimen/andes_body_font_size_s</item>
    </style>

    <style name="Andes.Body.XS">
        <item name="android:textSize">@dimen/andes_body_font_size_xs</item>
    </style>

    <style name="Andes.Link">
        <item name="android:textColor">@color/andes_text_color_link</item>
    </style>

    <style name="Andes.LinkInverted">

    </style>
    <!-- Calendar -->
    <style name="Andes.customCalendar" parent="android:Widget.CalendarView">
        <item name="colorControlActivated">@color/andes_accent_color_500</item>
        <item name="colorControlHighlight">@color/andes_accent_color_300</item>
    </style>

    <style name="Andes.CalendarDate">
        <item name="android:textSize">@dimen/andes_body_font_size_s</item>
        <item name="android:textColor">@drawable/andes_selector</item>
        <item name="fontFamily">"@font/andes_font_regular"</item>
    </style>

    <style name="Andes.CalendarDateWeek">
        <item name="android:textSize">@dimen/andes_datepicker_week_font_size</item>
        <item name="fontWeight">@dimen/andes_title_font_weight</item>
        <item name="fontFamily">"@font/andes_font_regular"</item>
    </style>

    <!-- Dropdown -->
    <style name="Andes.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Andes.BottomSheetStyleWrapper</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Andes.BottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Andes.FadeWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/andes_tooltip_fade_in_anim</item>
        <item name="android:windowExitAnimation">@anim/andes_tooltip_fade_out_anim</item>
    </style>

    <!-- Slider -->
    <style name="Andes.Slider" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="trackColor">@color/andes_gray_070_solid</item>
        <item name="trackColorInactive">@color/andes_gray_070_solid</item>
    </style>

    <style name="AndesDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="ScrollingPagerIndicator" tools:ignore="ResourceName">
        <item name="spi_dotColor">@android:color/darker_gray</item>
        <item name="spi_dotSelectedColor">@android:color/darker_gray</item>
        <item name="spi_dotSize">6dp</item>
        <item name="spi_dotSelectedSize">10dp</item>
        <item name="spi_dotSpacing">8dp</item>
        <item name="spi_visibleDotCount">5</item>
        <item name="spi_visibleDotThreshold">2</item>
        <item name="spi_looped">false</item>
    </style>

</resources>