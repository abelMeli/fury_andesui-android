<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/andes_tabs_bottom_drawable">

    <!--    Revisar padding vertical del Tablayout-->

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/andes_tabs_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/andes_tabs_container_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabPaddingEnd="@dimen/andes_tab_item_padding_horizontal"
        app:tabPaddingStart="@dimen/andes_tab_item_padding_horizontal" />

</androidx.constraintlayout.widget.ConstraintLayout>