<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".components.a11yplayground.PlaygroundHomeActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/a11y_home_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <com.mercadolibre.android.andesui.message.AndesMessage
            android:id="@+id/playground_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:andesMessageBodyText="@string/andes_demoapp_playground_card_body"
            app:andesMessageHierarchy="quiet"
            app:andesMessageTitleText="@string/andes_demoapp_playground_card_title"
            app:andesMessageType="neutral"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/a11y_home_nav_bar" />

        <com.mercadolibre.android.andesui.message.AndesMessage
            android:id="@+id/playground_message_landing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:andesMessageBodyText="@string/andes_demoapp_playground_message_landing_body"
            app:andesMessageHierarchy="quiet"
            app:andesMessageTitleText="@string/andes_demoapp_playground_message_landing_title"
            app:andesMessageType="neutral"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playground_message" />

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/playground_content_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            app:andesButtonText="@string/andes_demoapp_playground_title_content_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playground_message_landing" />

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/playground_next_focus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:andesButtonText="@string/andes_demoapp_playground_title_next_focus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playground_content_description" />

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/playground_important_for_a11y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:andesButtonText="@string/andes_demoapp_playground_title_important_for_a11y"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playground_next_focus" />

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/playground_live_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:andesButtonText="@string/andes_demoapp_playground_title_live_region"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playground_important_for_a11y" />

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/playground_announce_a11y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:andesButtonText="@string/andes_demoapp_playground_title_announce_a11y"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playground_live_region" />

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/playground_a11y_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:andesButtonText="@string/andes_demoapp_playground_title_a11y_heading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playground_announce_a11y" />

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/playground_traversal_after"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:andesButtonText="@string/andes_demoapp_playground_title_traversal_after"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playground_a11y_heading" />

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/playground_semantic_views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:andesButtonText="@string/andes_demoapp_playground_title_semantic_views"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playground_traversal_after" />

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/playground_custom_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:andesButtonText="@string/andes_demoapp_playground_aca_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/playground_semantic_views" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>