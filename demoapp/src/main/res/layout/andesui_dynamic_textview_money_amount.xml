<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true">

        <com.mercadolibre.android.andesui.textview.AndesTextView
            android:id="@+id/dynamic_page_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            app:andesTextViewStyle="bodyL"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.mercadolibre.android.andesui.textview.AndesTextView
            android:id="@+id/dynamic_page_textview_a11y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            app:andesTextViewStyle="bodyL"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dynamic_page_textview" />

        <View
            android:id="@+id/dynamic_page_textview_separator_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="@color/andes_gray_200"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dynamic_page_textview_a11y" />

        <com.mercadolibre.android.andesui.textview.AndesTextView
            android:id="@+id/dynamic_page_textview_text_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:text="Add text"
            app:andesTextViewStyle="titleS"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewColor" />


        <com.mercadolibre.android.andesui.textfield.AndesTextfield
            android:id="@+id/dynamic_page_textview_add_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:inputType="text"
            app:andesTextfieldPlaceholder="@string/andes_textview_textfield_range_placeholder"
            app:layout_constraintEnd_toStartOf="@id/dynamic_page_textview_button_add_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dynamic_page_textview_text_separator" />

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/dynamic_page_textview_button_add_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:inputType="number"
            app:andesButtonText="@string/andes_textview_add_text"
            app:andesTextfieldPlaceholder="@string/andes_textview_textfield_range_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/dynamic_page_textview_add_text"
            app:layout_constraintTop_toTopOf="@+id/dynamic_page_textview_add_text" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/demoapp_money_amount_size"
            app:layout_constraintEnd_toStartOf="@+id/spinner_size"
            app:layout_constraintStart_toStartOf="@+id/dynamic_page_textview_separator_1"
            app:layout_constraintTop_toBottomOf="@+id/dynamic_page_textview_amount_separator" />

        <Spinner
            android:id="@+id/spinner_size"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/textView15"
            app:layout_constraintEnd_toEndOf="@+id/dynamic_page_textview_separator_1"
            app:layout_constraintTop_toTopOf="@+id/textView15" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/demoapp_money_amount_currency"
            app:layout_constraintStart_toStartOf="@+id/dynamic_page_textview_separator_1"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <Spinner
            android:id="@+id/spinner_currency"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/textView30"
            app:layout_constraintEnd_toEndOf="@+id/dynamic_page_textview_separator_1"
            app:layout_constraintTop_toTopOf="@+id/textView30" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/demoapp_money_amount_country"
            app:layout_constraintStart_toStartOf="@+id/dynamic_page_textview_separator_1"
            app:layout_constraintTop_toBottomOf="@+id/textView30" />

        <Spinner
            android:id="@+id/spinner_country"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/textView17"
            app:layout_constraintEnd_toEndOf="@+id/dynamic_page_textview_separator_1"
            app:layout_constraintTop_toTopOf="@+id/textView17" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/demoapp_money_amount_style"
            app:layout_constraintStart_toStartOf="@+id/dynamic_page_textview_separator_1"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

        <Spinner
            android:id="@+id/spinner_style"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/textView19"
            app:layout_constraintEnd_toEndOf="@+id/dynamic_page_textview_separator_1"
            app:layout_constraintTop_toTopOf="@+id/textView19" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/demoapp_money_amount_type"
            app:layout_constraintStart_toStartOf="@+id/dynamic_page_textview_separator_1"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <Spinner
            android:id="@+id/spinner_type"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/textView18"
            app:layout_constraintEnd_toEndOf="@+id/dynamic_page_textview_separator_1"
            app:layout_constraintTop_toTopOf="@+id/textView18" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/demoapp_money_amount_suffix"
            app:layout_constraintStart_toStartOf="@+id/dynamic_page_textview_separator_1"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <Spinner
            android:id="@+id/spinner_suffix"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/textView21"
            app:layout_constraintEnd_toEndOf="@+id/dynamic_page_textview_separator_1"
            app:layout_constraintTop_toTopOf="@+id/textView21" />

        <com.mercadolibre.android.andesui.textview.AndesTextView
            android:id="@+id/dynamic_page_textview_amount_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="Add amount"
            app:andesTextViewStyle="titleS"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dynamic_page_textview_add_text" />

        <com.mercadolibre.android.andesui.textfield.AndesTextfield
            android:id="@+id/dynamic_page_textview_add_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:inputType="numberDecimal"
            app:andesTextfieldPlaceholder="@string/andes_textview_textfield_range_placeholder"
            app:layout_constraintEnd_toStartOf="@id/dynamic_page_textview_button_add_amount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/dynamic_page_textview_button_add_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:inputType="number"
            app:andesButtonText="@string/andes_textview_add_amount"
            app:andesTextfieldPlaceholder="@string/andes_textview_textfield_range_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dynamic_page_textview_add_amount"
            app:layout_constraintTop_toTopOf="@+id/dynamic_page_textview_add_amount"/>


        <com.mercadolibre.android.andesui.textview.AndesTextView
            android:id="@+id/dynamic_page_textview_tv_color_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Color range"
            app:andesTextViewStyle="titleS"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dynamic_page_textview_add_amount" />

        <com.mercadolibre.android.andesui.textfield.AndesTextfield
            android:id="@+id/dynamic_page_textview_tf_color_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:inputType="number"
            app:andesTextfieldLabel="@string/andes_textview_textfield_label_from"
            app:andesTextfieldPlaceholder="@string/andes_textview_textfield_range_placeholder"
            app:layout_constraintEnd_toStartOf="@id/dynamic_page_textview_tf_color_to"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dynamic_page_textview_tv_color_range" />

        <com.mercadolibre.android.andesui.textfield.AndesTextfield
            android:id="@+id/dynamic_page_textview_tf_color_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:inputType="number"
            app:andesTextfieldLabel="@string/andes_textview_textfield_label_to"
            app:andesTextfieldPlaceholder="@string/andes_textview_textfield_range_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/dynamic_page_textview_tf_color_from"
            app:layout_constraintTop_toBottomOf="@id/dynamic_page_textview_tv_color_range" />


        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/dynamic_page_textview_button_update_range"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:inputType="number"
            app:andesButtonText="@string/andes_textview_update_button_text"
            app:andesTextfieldPlaceholder="@string/andes_textview_textfield_range_placeholder"
            app:layout_constraintEnd_toStartOf="@+id/dynamic_page_textview_button_clear"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dynamic_page_textview_tf_color_from" />

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/dynamic_page_textview_button_clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="8dp"
            android:inputType="number"
            app:andesButtonText="@string/andes_textview_clear_button_text"
            app:andesTextfieldPlaceholder="@string/andes_textview_textfield_range_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/dynamic_page_textview_button_update_range"
            app:layout_constraintTop_toTopOf="@+id/dynamic_page_textview_button_update_range" />

        <TextView
            android:id="@+id/textViewColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/andes_textview_textfield_color_dd_placeholder"
            app:layout_constraintStart_toStartOf="@+id/dynamic_page_textview_separator_1"
            app:layout_constraintTop_toBottomOf="@+id/dynamic_page_textview_separator_1" />

        <Spinner
            android:id="@+id/spinner_color"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewColor"
            app:layout_constraintEnd_toStartOf="@id/color_view"
            app:layout_constraintTop_toTopOf="@+id/textViewColor" />

        <View
            android:id="@+id/color_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="@+id/dynamic_page_textview_separator_1"
            app:layout_constraintTop_toTopOf="@+id/spinner_color" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
