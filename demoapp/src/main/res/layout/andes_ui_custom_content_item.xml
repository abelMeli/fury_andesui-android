<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/security_ui_text_view_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/andes_font_regular"
        android:includeFontPadding="false"
        android:text="@string/andes_list_title"
        android:textColor="@color/andes_text_color_primary"
        android:textSize="@dimen/andes_list_item_title_font_size_medium"
        app:layout_constraintBottom_toTopOf="@+id/security_ui_view_space_title_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/security_ui_text_view_item_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/andes_font_regular"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="@string/andes_list_subtitle"
        android:textColor="@color/andes_text_color_secondary"
        android:textSize="@dimen/andes_list_item_title_font_size_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/security_ui_text_view_item_title"
        app:layout_constraintTop_toBottomOf="@+id/security_ui_view_space_title_subtitle" />

    <View
        android:id="@+id/security_ui_view_space_title_subtitle"
        android:layout_width="0dp"
        android:layout_height="@dimen/andes_list_item_space_between_title_subtitle_medium"
        app:layout_constraintBottom_toTopOf="@+id/security_ui_text_view_item_sub_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/security_ui_text_view_item_title"
        app:layout_constraintTop_toBottomOf="@+id/security_ui_text_view_item_title" />

    <com.mercadolibre.android.andesui.badge.AndesBadgePill
        android:id="@+id/security_ui_andes_badge_pill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:andesBadgePillHierarchy="quiet"
        app:andesBadgePillSize="small"
        app:andesBadgePillText="@string/andes_badge_pill"
        app:andesBadgePillType="success"
        app:layout_constraintBottom_toBottomOf="@+id/security_ui_text_view_item_sub_title"
        app:layout_constraintStart_toEndOf="@+id/security_ui_text_view_item_sub_title"
        app:layout_constraintTop_toTopOf="@+id/security_ui_text_view_item_sub_title" />

</androidx.constraintlayout.widget.ConstraintLayout>