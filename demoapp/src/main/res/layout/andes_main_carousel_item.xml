<?xml version="1.0" encoding="utf-8"?>
<com.mercadolibre.android.andesui.card.AndesCard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/andes_main_carouselitem_width"
    android:layout_height="@dimen/andes_main_carouselitem_height"
    android:clipToPadding="false"
    app:andesCardBodyPadding="medium"
    app:andesCardStyle="elevated">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/andes_main_carousel_padding_horizontal">

        <ImageView
            android:id="@+id/andes_main_carousel_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/andes_main_carousel_image_margin_top"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.mercadolibre.android.andesui.textview.AndesTextView
            android:id="@+id/andes_main_carousel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/andes_main_carousel_text_margin_top"
            android:layout_marginBottom="@dimen/andes_main_carousel_text_margin_bottom"
            android:gravity="center"
            app:andesTextViewStyle="bodyS"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/andes_main_carousel_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.mercadolibre.android.andesui.card.AndesCard>