<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <com.mercadolibre.android.andesui.stickyscrollview.AndesStickyScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/andes_white"
            android:fillViewport="true"
            app:andesStickyHeader="@id/title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.mercadolibre.android.andesui.textview.AndesTextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/andes_bg_color_white"
                    android:paddingTop="22dp"
                    android:paddingBottom="12dp"
                    android:paddingHorizontal="24dp"
                    android:text="Title"
                    app:andesTextViewTextColor="primary"
                    app:andesTextViewStyle="titleS"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <com.mercadolibre.android.andesui.textview.AndesTextView
                    android:id="@+id/sub_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:gravity="center"
                    app:andesTextViewStyle="bodyM"
                    app:andesTextViewTextColor="primary"
                    android:text="@string/andes_demoapp_playground_lorem" />

                <com.mercadolibre.android.andesui.textview.AndesTextView
                    android:id="@+id/sub_title_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:gravity="center"
                    app:andesTextViewStyle="bodyM"
                    app:andesTextViewTextColor="primary"
                    android:text="@string/andes_demoapp_playground_lorem" />

                <com.mercadolibre.android.andesui.textview.AndesTextView
                    android:id="@+id/sub_title_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:gravity="center"
                    app:andesTextViewStyle="bodyM"
                    app:andesTextViewTextColor="primary"
                    android:text="@string/andes_demoapp_playground_lorem" />

                <com.mercadolibre.android.andesui.textview.AndesTextView
                    android:id="@+id/sub_title_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:gravity="center"
                    app:andesTextViewStyle="bodyM"
                    app:andesTextViewTextColor="primary"
                    android:text="@string/andes_demoapp_playground_lorem" />

                <com.mercadolibre.android.andesui.textview.AndesTextView
                    android:id="@+id/sub_title_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:gravity="center"
                    app:andesTextViewStyle="bodyM"
                    app:andesTextViewTextColor="primary"
                    android:text="@string/andes_demoapp_playground_lorem" />

            </LinearLayout>

        </com.mercadolibre.android.andesui.stickyscrollview.AndesStickyScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/andes_bg_color_white"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp">

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:andesButtonText="@string/andes_button_text"/>

    </LinearLayout>

</LinearLayout>