<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp">

    <com.mercadolibre.android.andesui.message.AndesMessage
        android:id="@+id/showcase_tabs_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_margin_vertical"
        app:andesMessageBodyText="@string/andes_tabs_dynamic_message"
        app:andesMessageHierarchy="quiet"
        app:andesMessageTitleText="@string/title_description"
        app:andesMessageType="neutral"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mercadolibre.android.andesui.tabs.AndesTabs
        android:id="@+id/showcase_dynamic_tabs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showcase_tabs_message" />

    <TextView
        android:id="@+id/showcase_dynamic_tabs_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type:"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/showcase_tabs_message"
        app:layout_constraintTop_toBottomOf="@+id/showcase_dynamic_tabs" />

    <Spinner
        android:id="@+id/dynamic_tabs_spinner_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/showcase_dynamic_tabs_tv_type"
        app:layout_constraintEnd_toEndOf="@+id/showcase_tabs_message"
        app:layout_constraintTop_toTopOf="@+id/showcase_dynamic_tabs_tv_type" />

    <TextView
        android:id="@+id/showcase_dynamic_tabs_tv_callback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Callback:"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/showcase_tabs_message"
        app:layout_constraintTop_toBottomOf="@+id/showcase_dynamic_tabs_tv_type" />

    <Spinner
        android:id="@+id/dynamic_tabs_spinner_callback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/showcase_dynamic_tabs_tv_callback"
        app:layout_constraintEnd_toEndOf="@+id/showcase_tabs_message"
        app:layout_constraintTop_toTopOf="@+id/showcase_dynamic_tabs_tv_callback" />

    <com.mercadolibre.android.andesui.button.AndesButton
        android:id="@+id/dynamic_tabs_button_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:andesButtonText="@string/andes_timepicker_button_clear"
        app:layout_constraintEnd_toStartOf="@+id/dynamic_tabs_button_update"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showcase_dynamic_tabs_tv_callback" />

    <com.mercadolibre.android.andesui.button.AndesButton
        android:id="@+id/dynamic_tabs_button_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:andesButtonText="@string/andes_timepicker_button_update"
        app:layout_constraintBottom_toBottomOf="@+id/dynamic_tabs_button_clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dynamic_tabs_button_clear"
        app:layout_constraintTop_toTopOf="@+id/dynamic_tabs_button_clear" />

</androidx.constraintlayout.widget.ConstraintLayout>