<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".components.a11yplayground.AnnounceForA11yActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/afa_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <com.mercadolibre.android.andesui.message.AndesMessage
        android:id="@+id/afa_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:andesMessageBodyText="@string/andes_demoapp_playground_afa_body"
        app:andesMessageHierarchy="quiet"
        app:andesMessageTitleText="@string/andes_demoapp_playground_afa_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/afa_nav_bar" />

    <TextView
        android:id="@+id/afa_tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="@string/andes_demoapp_playground_afa_tv"
        android:textColor="@color/andes_text_color_primary"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/afa_card" />

    <com.mercadolibre.android.andesui.textfield.AndesTextfield
        android:id="@+id/afa_tf_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:andesTextfieldLabel="@string/andes_demoapp_playground_afa_textfield_label"
        app:andesTextfieldPlaceholder="@string/andes_demoapp_playground_afa_textfield_placeholder"
        app:andesTextfieldRightContent="clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/afa_tv_info" />

    <com.mercadolibre.android.andesui.button.AndesButton
        android:id="@+id/afa_button_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:andesButtonText="@string/andes_demoapp_playground_afa_button_send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/afa_tf_send" />

</androidx.constraintlayout.widget.ConstraintLayout>