<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.mercadolibre.android.andesui.message.AndesMessage
        android:id="@+id/modal_message_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/button_margin_vertical"
        android:layout_marginTop="@dimen/button_margin_vertical"
        android:layout_marginEnd="@dimen/button_margin_vertical"
        app:andesMessageBodyText="@string/title_description"
        app:andesMessageDismissable="false"
        app:andesMessageHierarchy="loud"
        app:andesMessageTitleText="@string/andes_demoapp_playground_lorem"
        app:andesMessageType="neutral"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mercadolibre.android.andesui.textview.AndesTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="Andes textview to test the modal with custom view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/modal_message_test" />

</androidx.constraintlayout.widget.ConstraintLayout>
