<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/andes_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/andes_loud_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mercadolibre.android.andesui.message.AndesMessage
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/button_margin_vertical"
            android:layout_marginTop="@dimen/button_margin_vertical"
            android:layout_marginEnd="@dimen/button_margin_vertical"
            app:andesMessageBodyText="@string/andes_linear_progress_indicator_description"
            app:andesMessageHierarchy="quiet"
            app:andesMessageTitleText="@string/title_description"
            app:andesMessageType="neutral"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.mercadolibre.android.andesui.linearprogress.AndesLinearProgressIndicatorDeterminate
            android:id="@+id/linear_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:andesLinearProgressSize="small"
            app:layout_constraintEnd_toEndOf="@+id/message"
            app:layout_constraintStart_toStartOf="@+id/message"
            app:layout_constraintTop_toBottomOf="@+id/message" />

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/next_step_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            app:andesButtonHierarchy="loud"
            app:andesButtonSize="large"
            app:andesButtonText="@string/andes_linear_progress_indicator_showcase_next_step"
            app:layout_constraintEnd_toEndOf="@+id/linear_progress"
            app:layout_constraintStart_toEndOf="@+id/previous_step_button"
            app:layout_constraintTop_toBottomOf="@+id/linear_progress" />

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/previous_step_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:andesButtonHierarchy="loud"
            app:andesButtonSize="large"
            app:andesButtonText="@string/andes_linear_progress_indicator_showcase_previous_step"
            app:layout_constraintEnd_toStartOf="@+id/next_step_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/linear_progress"
            app:layout_constraintTop_toTopOf="@+id/next_step_button" />

        <com.mercadolibre.android.andesui.textfield.AndesTextfield
            android:id="@+id/jump_to_step_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:inputType="number"
            app:andesTextfieldPlaceholder="@string/andes_linear_progress_indicator_showcase_step"
            app:andesTextfieldRightContent="clear"
            app:layout_constraintEnd_toEndOf="@+id/previous_step_button"
            app:layout_constraintStart_toStartOf="@+id/previous_step_button"
            app:layout_constraintTop_toBottomOf="@+id/previous_step_button" />

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/jump_to_step_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:andesButtonHierarchy="loud"
            app:andesButtonSize="large"
            app:andesButtonText="@string/andes_linear_progress_indicator_showcase_jump_to_step"
            app:layout_constraintEnd_toEndOf="@+id/next_step_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/next_step_button"
            app:layout_constraintTop_toBottomOf="@+id/previous_step_button" />

        <TextView
            android:id="@+id/textView_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/andes_linear_progress_indicator_showcase_size"
            android:textColor="@color/andes_text_color_primary"
            app:layout_constraintEnd_toStartOf="@+id/size_spinner"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/jump_to_step_text"
            app:layout_constraintTop_toBottomOf="@+id/jump_to_step_text" />

        <Spinner
            android:id="@+id/size_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/jump_to_step_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_size"
            app:layout_constraintTop_toTopOf="@+id/textView_size" />

        <com.mercadolibre.android.andesui.checkbox.AndesCheckbox
            android:id="@+id/split_checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/andes_button_enabled"
            app:andesCheckboxAlign="right"
            app:andesCheckboxStatus="unselected"
            app:andesCheckboxText="@string/andes_linear_progress_indicator_showcase_split"
            app:layout_constraintStart_toStartOf="@+id/textView_size"
            app:layout_constraintTop_toBottomOf="@+id/size_spinner" />

        <com.mercadolibre.android.andesui.textfield.AndesTextfield
            android:id="@+id/number_of_steps_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:inputType="number"
            app:andesTextfieldPlaceholder="@string/andes_linear_progress_indicator_showcase_quantity"
            app:andesTextfieldRightContent="clear"
            app:layout_constraintEnd_toEndOf="@+id/size_spinner"
            app:layout_constraintStart_toStartOf="@+id/split_checkbox"
            app:layout_constraintTop_toBottomOf="@+id/split_checkbox" />

        <com.mercadolibre.android.andesui.textfield.AndesTextfield
            android:id="@+id/indicator_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:inputType="text"
            app:andesTextfieldHelper="@string/andes_linear_progress_indicator_showcase_indicator_tint_helper"
            app:andesTextfieldPlaceholder="@string/andes_linear_progress_indicator_showcase_indicator_tint"
            app:andesTextfieldRightContent="clear"
            app:layout_constraintEnd_toEndOf="@+id/number_of_steps_text"
            app:layout_constraintStart_toStartOf="@+id/number_of_steps_text"
            app:layout_constraintTop_toBottomOf="@+id/number_of_steps_text" />

        <com.mercadolibre.android.andesui.textfield.AndesTextfield
            android:id="@+id/track_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:inputType="text"
            app:andesTextfieldHelper="@string/andes_linear_progress_indicator_showcase_track_tint_helper"
            app:andesTextfieldPlaceholder="@string/andes_linear_progress_indicator_showcase_track_tint"
            app:andesTextfieldRightContent="clear"
            app:layout_constraintEnd_toEndOf="@+id/indicator_text"
            app:layout_constraintStart_toStartOf="@+id/indicator_text"
            app:layout_constraintTop_toBottomOf="@+id/indicator_text" />

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/change_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            app:andesButtonHierarchy="loud"
            app:andesButtonSize="large"
            app:andesButtonText="@string/andes_linear_progress_indicator_showcase_update"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/clear_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/track_text"
            app:layout_constraintTop_toBottomOf="@+id/track_text" />

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/clear_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:andesButtonHierarchy="loud"
            app:andesButtonSize="large"
            app:andesButtonText="@string/andes_linear_progress_indicator_showcase_clear"
            app:layout_constraintEnd_toEndOf="@+id/track_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/change_button"
            app:layout_constraintTop_toTopOf="@+id/change_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>