<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="@dimen/andes_main_changelog_height"
    android:paddingHorizontal="@dimen/andes_main_changelog_icon_margin_start"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/andes_main_changelog_icon_size"
        android:layout_height="@dimen/andes_main_changelog_icon_size"
        android:scaleType="fitCenter"
        android:id="@+id/andes_changelog_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/andes_logo_blue_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/andes_changelog_text"
        android:contentDescription="@null"
        />

    <com.mercadolibre.android.andesui.textview.AndesTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/andes_changelog_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="@dimen/andes_main_changelog_icon_margin_end"
        android:text="@string/andes_main_changelog_text"
        app:andesTextViewStyle="bodyM"
        android:paddingVertical="@dimen/andes_main_changelog_text_padding_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/andes_changelog_chevron"
        app:layout_constraintStart_toEndOf="@+id/andes_changelog_logo"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/andes_changelog_text"
        android:id="@+id/andes_changelog_chevron"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/andes_ui_chevron_right_12"/>

</androidx.constraintlayout.widget.ConstraintLayout>