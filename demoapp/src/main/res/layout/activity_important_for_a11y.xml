<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".components.a11yplayground.ImportantForA11yActivity">

        <com.mercadolibre.android.andesui.message.AndesMessage
            android:id="@+id/ifa_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:andesMessageBodyText="@string/andes_demoapp_playground_ifa_body"
            app:andesMessageHierarchy="quiet"
            app:andesMessageTitleText="@string/andes_demoapp_playground_ifa_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ifa_layout_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:background="@color/andes_red_200"
            android:importantForAccessibility="noHideDescendants"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ifa_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/andes_demoapp_playground_ifa_tv_first"
                android:textColor="@color/andes_text_color_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.mercadolibre.android.andesui.button.AndesButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:andesButtonText="@string/andes_demoapp_playground_ata_button_1" />

                <com.mercadolibre.android.andesui.button.AndesButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:andesButtonText="@string/andes_demoapp_playground_ata_button_2" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ifa_layout_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:background="@color/andes_orange_200"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ifa_layout_first">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/andes_demoapp_playground_ifa_tv_second"
                android:textColor="@color/andes_text_color_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.mercadolibre.android.andesui.button.AndesButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:andesButtonText="@string/andes_demoapp_playground_ata_button_1" />

                <com.mercadolibre.android.andesui.button.AndesButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:andesButtonText="@string/andes_demoapp_playground_ata_button_2" />

                <com.mercadolibre.android.andesui.button.AndesButton
                    android:id="@+id/ifa_button_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:importantForAccessibility="noHideDescendants"
                    app:andesButtonText="@string/andes_demoapp_playground_ata_button_3" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ifa_layout_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:background="@color/andes_green_200"
            android:contentDescription="outer layout"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ifa_layout_second">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/andes_demoapp_playground_ifa_tv_third"
                android:textColor="@color/andes_text_color_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.mercadolibre.android.andesui.button.AndesButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:andesButtonText="@string/andes_demoapp_playground_ata_button_1" />

                <com.mercadolibre.android.andesui.button.AndesButton
                    android:id="@+id/ifa_button_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:andesButtonText="@string/andes_demoapp_playground_ata_button_2" />

                <com.mercadolibre.android.andesui.button.AndesButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:andesButtonText="@string/andes_demoapp_playground_ata_button_3" />

            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
