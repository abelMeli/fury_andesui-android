<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/andes_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <com.mercadolibre.android.andesui.thumbnail.AndesThumbnail
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/andes_thumbnail_icon_size_16"
            android:layout_marginBottom="@dimen/andes_thumbnail_icon_size_16"
            app:andesThumbnailAccentColor="@color/andes_red_800"
            app:andesThumbnailHierarchy="AndesDefault"
            app:andesThumbnailSize="size_48"
            app:andesThumbnailState="disabled"
            app:andesThumbnailText="AB"
            app:andesThumbnailAssetType="text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/andes_thumbnail_description_24"
            android:textSize="@dimen/description_text_size_thumbnail" />

        <com.mercadolibre.android.andesui.thumbnail.AndesThumbnail
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/andes_thumbnail_icon_size_16"
            android:layout_marginBottom="@dimen/andes_thumbnail_icon_size_16"
            app:andesThumbnailAccentColor="@color/andes_accent_color_800"
            app:andesThumbnailHierarchy="loud"
            app:andesThumbnailImage="@drawable/andes_otros_almanaque_20"
            app:andesThumbnailSize="size_48"
            app:andesThumbnailState="enabled"
            app:andesThumbnailAssetType="icon"
            app:andesThumbnailShape="square"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/andes_thumbnail_description_48"
            android:textSize="@dimen/description_text_size_thumbnail" />

        <com.mercadolibre.android.andesui.thumbnail.AndesThumbnail
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/andes_thumbnail_icon_size_16"
            android:layout_marginBottom="@dimen/andes_thumbnail_icon_size_16"
            app:andesThumbnailAccentColor="@color/andes_red_800"
            app:andesThumbnailHierarchy="AndesDefault"
            app:andesThumbnailImage="@drawable/andes_envio_envio_24"
            app:andesThumbnailSize="size_64"
            app:andesThumbnailState="enabled" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/andes_thumbnail_description_64"
            android:textSize="@dimen/description_text_size_thumbnail" />

        <com.mercadolibre.android.andesui.thumbnail.AndesThumbnail
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/andes_thumbnail_icon_size_16"
            android:layout_marginBottom="@dimen/andes_thumbnail_icon_size_16"
            app:andesThumbnailAccentColor="@color/andes_red_800"
            app:andesThumbnailHierarchy="quiet"
            app:andesThumbnailImage="@drawable/andes_otros_almanaque_20"
            app:andesThumbnailSize="size_80"
            app:andesThumbnailState="enabled"
            app:andesThumbnailType="icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/andes_thumbnail_description_80"
            android:textSize="@dimen/description_text_size_thumbnail" />

        <com.mercadolibre.android.andesui.thumbnail.AndesThumbnail
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/andes_thumbnail_icon_size_16"
            android:layout_marginBottom="@dimen/andes_thumbnail_icon_size_16"
            app:andesThumbnailHierarchy="AndesDefault"
            app:andesThumbnailImage="@drawable/andes_otros_almanaque_20"
            app:andesThumbnailSize="size_64"
            app:andesThumbnailState="enabled"
            app:andesThumbnailType="image_circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/andes_thumbnail_description_image_circle"
            android:textSize="@dimen/description_text_size_thumbnail" />

        <com.mercadolibre.android.andesui.thumbnail.AndesThumbnail
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/andes_thumbnail_icon_size_16"
            android:layout_marginBottom="@dimen/andes_thumbnail_icon_size_16"
            app:andesThumbnailHierarchy="AndesDefault"
            app:andesThumbnailImage="@drawable/andes_otros_almanaque_20"
            app:andesThumbnailSize="size_64"
            app:andesThumbnailState="enabled"
            app:andesThumbnailType="image_square" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/andes_thumbnail_description_image_square"
            android:textSize="@dimen/description_text_size_thumbnail" />

        <com.mercadolibre.android.andesui.thumbnail.AndesThumbnail
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/andes_thumbnail_icon_size_16"
            android:layout_marginBottom="@dimen/andes_thumbnail_icon_size_16"
            app:andesThumbnailAccentColor="@color/andes_red_800"
            app:andesThumbnailHierarchy="AndesDefault"
            app:andesThumbnailAssetType="text"
            app:andesThumbnailText="AB"
            app:andesThumbnailSize="size_64"
            app:andesThumbnailState="enabled"
            app:andesThumbnailShape="square"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/andes_thumbnail_description_image_circle_initials"
            android:textSize="@dimen/description_text_size_thumbnail" />

        <com.mercadolibre.android.andesui.thumbnail.AndesThumbnailBadge
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/andes_thumbnail_icon_size_16"
            android:layout_marginBottom="@dimen/andes_thumbnail_icon_size_16"
            app:andesThumbnailBadgeType="text"
            app:andesThumbnailBadgeText="AB"
            app:andesThumbnailBadgeComponentType="success"
            app:andesThumbnailBadgeComponent="icon_pill"
            app:andesThumbnailBadgeComponentPillSize="size_64"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_text_size_thumbnail_badge_icon_pill_initials"
            android:textSize="@dimen/description_text_size_thumbnail" />

        <com.mercadolibre.android.andesui.thumbnail.AndesThumbnailBadge
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/andes_thumbnail_icon_size_16"
            android:layout_marginBottom="@dimen/andes_thumbnail_icon_size_16"
            app:andesThumbnailBadgeType="text"
            app:andesThumbnailBadgeText="AB"
            app:andesThumbnailBadgeComponentType="error"
            app:andesThumbnailBadgeComponent="dot"
            app:andesThumbnailBadgeComponentDotSize="size_32"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_text_size_thumbnail_badge_dot_initials"
            android:textSize="@dimen/description_text_size_thumbnail" />

        <com.mercadolibre.android.andesui.thumbnail.AndesThumbnailBadge
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/andes_thumbnail_icon_size_16"
            android:layout_marginBottom="@dimen/andes_thumbnail_icon_size_16"
            app:andesThumbnailBadgeImage="@drawable/andes_envio_envio_24"
            app:andesThumbnailBadgeComponentType="success"
            app:andesThumbnailBadgeComponent="icon_pill"
            app:andesThumbnailBadgeComponentPillSize="size_64"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_text_size_thumbnail_badge_icon_pill"
            android:textSize="@dimen/description_text_size_thumbnail" />

        <com.mercadolibre.android.andesui.thumbnail.AndesThumbnailBadge
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:andesThumbnailBadgeImage="@drawable/andes_envio_envio_24"
            android:layout_marginTop="@dimen/andes_thumbnail_icon_size_16"
            android:layout_marginBottom="@dimen/andes_thumbnail_icon_size_16"
            app:andesThumbnailBadgeComponentType="highlight"
            app:andesThumbnailBadgeComponent="pill"
            app:andesThumbnailBadgePillText="@string/andes_thumbnail_badge_pill_text_sample"
            app:andesThumbnailBadgeComponentPillSize="size_56"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_text_size_thumbnail_badge_pill"
            android:textSize="@dimen/description_text_size_thumbnail" />

        <com.mercadolibre.android.andesui.thumbnail.AndesThumbnailBadge
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:andesThumbnailBadgeImage="@drawable/andes_envio_envio_24"
            android:layout_marginTop="@dimen/andes_thumbnail_icon_size_16"
            android:layout_marginBottom="@dimen/andes_thumbnail_icon_size_16"
            app:andesThumbnailBadgeType="image_circle"
            app:andesThumbnailBadgeComponentType="error"
            app:andesThumbnailBadgeComponent="dot"
            app:andesThumbnailBadgeComponentDotSize="size_32"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_text_size_thumbnail_badge_dot"
            android:textSize="@dimen/description_text_size_thumbnail" />

        <TextView
            android:id="@+id/andesui_demoapp_label_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/andes_thumbnail_size_48"
            android:text="@string/andes_demoapp_label_more" />

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/andesui_demoapp_andes_specs_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/button_margin_vertical"
            app:andesButtonHierarchy="quiet"
            app:andesButtonSize="medium"
            app:andesButtonText="@string/andes_thumbnail_specs"
            app:layout_constraintTop_toBottomOf="@id/andesui_demoapp_label_more" />
    </LinearLayout>
</ScrollView>